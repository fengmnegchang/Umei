<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:minHeight="400dp"
        android:scaleType="fitCenter"
        android:src="@drawable/common_v4" />

    <TextView
        android:id="@+id/txt_typename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="清新花草高清电脑桌面壁纸"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_IcoList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_typename"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="查看：62次"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_IcoTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_typename"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/txt_IcoList"
        android:text="12-23"
        android:textSize="14sp" />

</RelativeLayout>