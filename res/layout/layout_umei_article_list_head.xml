<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f92d1"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:fitsSystemWindows="true" >

    <TextView
        android:id="@+id/txt_ArticleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="清纯非主流美女图片电脑壁纸" />

    <FrameLayout
        android:id="@+id/layout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/txt_ArticleTitle" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_viewpager"
        android:layout_marginTop="5dp"
        android:text="更新时间：2016-08-18" />

    <TextView
        android:id="@+id/txt_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layout_viewpager"
        android:layout_marginTop="5dp"
        android:text="浏览：114次" />

    <TextView
        android:id="@+id/txt_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_time"
        android:layout_marginTop="5dp"
        android:text="所属栏目：电脑壁纸" />

    <TextView
        android:id="@+id/txt_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_time"
        android:layout_marginTop="5dp"
        android:text="温馨提示：点击图片进入下一页" />

    <TextView
        android:id="@+id/txt_ArticleDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_column"
        android:layout_marginTop="5dp"
        android:text="图片介绍 : 优美图库《电脑壁纸》栏目小编精心为您提供一组《清纯非主流美女图片电脑壁纸》图集，优美图库以高清美图为宗旨倾力打造一个品牌图库网站，更多高清、美图尽在优美图库网（umei.cc）。" />

</RelativeLayout>