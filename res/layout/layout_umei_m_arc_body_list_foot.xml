<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f92d1"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:fitsSystemWindows="true" >

    <TextView
        android:id="@+id/txt_articlepre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="上一篇：性感尤物薇薇安私房人体写真秀美乳翘臀"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txt_articlenext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_articlepre"
        android:layout_marginTop="5dp"
        android:text="下一篇：性感嫩模Candi情趣内衣写真美臀诱人"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txt_arcDESC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_articlenext"
        android:layout_marginTop="5dp"
        android:text="张梓柔，内地油画画师、兼职模特、头条女神麻豆。美女模特带来一组私房性感写真，上半身赤裸，穿着蕾丝内裤的模特，身材非常火辣诱人，美乳和翘臀，让人看了陶醉其中，不能自拔。"
        android:textSize="12dp" />

    <FrameLayout
        android:id="@+id/layout_arc_tags_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_arcDESC"
        android:layout_marginRight="60dp" />

    <TextView
        android:id="@+id/txt_artsee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_arcDESC"
        android:layout_marginTop="5dp"
        android:text="浏览:67次"
        android:textSize="12dp" />

    <FrameLayout
        android:id="@+id/layout_expandablelistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_artsee" />

</RelativeLayout>